
<!DOCTYPE html>
<html>
<body>
    <script>
    var MyAppUrlSettings = {
        MyUsefulUrl: '@Url.Action("GetData", "ProductOrder")'
    }

    var Edit_PO_URL = {
        MyEdit_PO_URL: '@Url.Action("EditProduct", "ProductOrder")'
        }
        var POhead_URL = {
            MyPOheadURL:'@Url.Action("GetPOheadData", "ProductOrder")'
        }
        
    </script>

    <h1>PRODUCTS ORDERS LIST</h1>
    <h2>Purchase order <span data-bind="text: getSeletedPO ().Order_No"></span></h2>
    <p>Supplier: <span><input type="text" data-bind="value:getSeletedPO() .Supplier ,enable:false " /></span> </p>
    <p>Stock Site: <span><input type="text" data-bind="value:getSeletedPO() .Stock_Site ,enable:false " /></span> </p>
    <p>Order Date: <span><input type="text" data-bind="value: getSeletedPO() .Order_Date ,enable:false " /></span> </p>
    <p>Note: <input type="text" data-bind="textInput: getSeletedPO() .Note  " /></p>
    <p>Supplier name: <span><input type="text" data-bind="value: getSeletedPO() .Supplier_name ,enable:false " /></span> </p>
    <p>Stock Name: <span><input type="text" data-bind="value: getSeletedPO() .Stock_Name  " /></span> </p>
    <p>Address<span style="color: red">*: </span>  <span><input type="text" data-bind="value: getSeletedPO() .Address  " /></span> </p>
    <p>Country<span style="color: red">*: </span> <span><input type="text" data-bind="value: getSeletedPO() .Country  " /></span> </p>
    <p>Postcode<span style="color: red">*: </span> <span><input type="text" data-bind="value: getSeletedPO() .Post_Code  " /></span> </p>
    @*<button data-bind="click: $root.EditPO">Save</button> <span><button data-bind="click: GoToMain">Cancel</button></span>*@




    <div>

        <table style="width:100%">
            <thead><tr><th>Part_Number</th><th>Part_Des</th><th>Manufacturer</th><th>Qty_Order</th><th>Order_Date</th><th>Memo</th><th>Total Price ($)</th><th></th></tr></thead>
            <tbody data-bind="foreach: PO_Lines">
                <tr>
                    <td data-bind="text: Part_Number"></td>
                    <td data-bind="text: Part_Des"></td>
                    <td data-bind="text: Manufacturer"></td>
                    <td data-bind="text: Qty_Order"></td>
                    <td data-bind="text: Order_Date"></td>
                    <td data-bind="text: Memo"></td>
                    <td data-bind="text: Buy_Price "></td>
                    <td><a href="#" data-bind="click: $root.RemovePOline">Remove</a></td>
                </tr>
            </tbody>
        </table>
    </div>
